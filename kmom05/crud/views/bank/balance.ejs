<%- include("header", {title: title}); %>

<main>
<h1>Account balance</h1>

<p>Here is the balance for the accounts.</p>


<table>
    <tr>
        <th>Id </th>
        <th>Name </th>
        <th>Balance</th>
        <th>Acc info</th>
        <th></th>
    </tr>
<% for (const row of res) { %>
    <tr>
        <td><%= row.id %></td>
        <td><%= row.name %></td>
        <td class="number-right"><%= row.balance %></td>
        <td><a href="/bank/account/<%= row.id %>"><%= row.id %></a></td>
        <td>
            <a href="/bank/edit/<%= row.id %>">
                &#128394;

            </a>
            <a href="/bank/delete/<%= row.id %>">
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
<% }; %>
</table>
